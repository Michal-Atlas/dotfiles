# -*- mode: shell-script -*-

GRC_ALIASES=true
GEOMETRY_STATUS_SYMBOL='λ'
GEOMETRY_STATUS_SYMBOL_ERROR='△'

. ~/.guix-home/profile/share/zsh/themes/zsh-theme-geometry/geometry.zsh-theme
find -L ${GUIX_ENVIRONMENT:-$HOME/.guix-home/profile}/share/zsh/plugins/ -name "*.plugin.zsh" | while read -r l; do;											   	source "$l";		
done;
. ~/.guix-home/profile/share/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh
. ~/.guix-home/profile/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
. ~/.guix-home/profile/etc/profile.d/grc.sh

zstyle ':completion:*' menu select
zstyle ':completion:*' list-colors ${(s.:.)LS_COLORS}

alias cat=bat
alias q=exit
alias e="emacsclient -a=\"\""
alias s=screen
#[[ -z $STY ]] && screen && exit
eval "$(direnv hook zsh)"
eval "$(zoxide init zsh)"
