# -*- mode: shell-script -*-

ang_home="${HOME}/.antigen"
if [ ! -e $ang_home ]; then
    mkdir "$ang_home"
    curl -L git.io/antigen > $ang_home/antigen.zsh;
fi;
source $ang_home/antigen.zsh

GEOMETRY_STATUS_SYMBOL='λ'
GEOMETRY_STATUS_SYMBOL_ERROR='△'
antigen theme geometry-zsh/geometry geometry

antigen use oh-my-zsh

PLUGINS=(
    common-aliases 
    extract 
    git 
    git-auto-fetch 
    shrink-path 
    ssh-agent 
    dirhistory 
    screen
    zpm-zsh/colorize 
    emacs 
    DarrinTisdale/zsh-aliases-exa
    wfxr/forgit 
    hlissner/zsh-autopair 
    colored-man-pages 
    Michal-Atlas/zsh-guix 
    djui/alias-tips
    zsh-users/zsh-history-substring-search
    zsh-users/zsh-autosuggestions
    zsh-users/zsh-completions
    paulirish/git-open
    zsh-users/zsh-syntax-highlighting
)

for f in "${PLUGINS[@]}"; do
    antigen bundle $f;
done;

antigen apply

zstyle ':completion:*' menu select
zstyle ':completion:*' list-colors ${(s.:.)LS_COLORS}

alias cat=bat
alias q=exit

alias s=screen
echo "[\e[0;90m$(hostname)\e[0m]"
#[[ -z $STY ]] && screen && exit
