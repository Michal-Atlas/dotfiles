# -*- mode: shell-script -*-

. ~/.guix-home/share/zsh/themes/zsh-theme-geometry/gemotry.zsh-theme
. $(find ~/${GUIX_ENVIRONMENT:-$HOME/.guix-home}/share/zsh/plugins/ -name "*.plugin.zsh")
. ~/.guix-home/share/zsh/plugins/zsh-syntax-highlughting/zsh-syntax-highlighting.zsh
. ~/.guix-home/share/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh

GRC_ALIASES=true
GEOMETRY_PROMPT='λ'
GEOMETRY_STATUS_SYMBOL='λ'
GEOMETRY_STATUS_SYMBOL_ERROR='△'

zstyle ':completion:*' menu select
zstyle ':completion:*' list-colors ${(s.:.)LS_COLORS}

alias cat=bat
alias q=exit

alias s=screen
#[[ -z $STY ]] && screen && exit
eval "$(direnv hook zsh)"
eval "$(zoxide init zsh)"
