# -*- mode: shell-script -*-

[ -f "$HOME/.cargo/env" ] && . "$HOME/.cargo/env" || true
export RUST_SRC_PATH="$(rustc --print sysroot)/lib/rustlib/src/rust/library"
export EMACSLOADPATH="$EMACSLOADPATH:$HOME/.guix-home/profile/share/emacs/site-lisp"
export XDG_DATA_DIRS="$XDG_DATE_DIRS:/var/lib/flatpak/exports/share:/home/michal-atlas/.local/share/flatpak/exports/share"

HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=1000
setopt INC_APPEND_HISTORY_TIME

setopt -wJU
setopt auto_continue
setopt no_hup
setopt pipe_fail
autoload -Uz compinit
compinit
. /run/current-system/profile/etc/profile.d/nix.sh
. /run/current-system/profile/etc/profile.d/flatpak.sh
. /run/current-system/profile/etc/profile.d/PackageKit.sh
