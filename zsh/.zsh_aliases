alias ll='ls -alF'
alias la='ls -A'
#alias l='ls -CF'
alias q="exit"
alias l='k -hA'

rmd () {
        pandoc $1 | lynx -stdin
}
topdf() {
	pandoc -f markdown -t latex $1 -o $(echo $1 | sed "s/\.md/\.pdf/");
}

surfmd() {
	pandoc -f markdown -t html5 $1 -o /tmp/surfmd.html;
	surf /tmp/surfmd.html;
}

mpvmp() {
	mpv --mute --playlist=$1
}
mpvm() {
	mpv --mute $@
}

qe() {
	devour $@ && exit
}

alias ip='ip -color=auto'

alias tmux='tmux -2'
alias rustdc='firefox $(rustup docs --path)'
alias cbr="cargo b --release"

