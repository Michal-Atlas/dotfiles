alias rscr='cargo run'
alias rscrd='cargo doc --open'
alias rssd='xdg-open (rustup doc --path)'

source ~/.zplug/init.zsh

zplug 'zplug/zplug', hook-build:'zplug --self-manage'

plugins=(
    aliases
    common-aliases
    emacs
    extract
    git
    git-auto-fetch
    hlissner/zsh-autopair
    shrink-path
    ssh-agent
    wfxr/forgit
    zoxide
    zpm-zsh/colorize
    zsh-users/zsh-syntax-highlighting

    antigen theme romkatv/powerlevel10k

    antigen apply
)
for pl in plugins; do
    zplug "$pl"
done;

if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
	echo; zplug install
    fi
fi

zplug load --verbose

alias crontab="crontab -i"
alias cat=bat
alias q=exit

recon () {
    sudo guix system reconfigure "$HOME/.local/share/chezmoi/private_dot_config/guix/$1.scm" -L "$HOME/.local/share/chezmoi/private_dot_config/guix/"
}

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
# shellcheck disable=1090
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
# ZSH:2 ends here
