alias rscr='cargo run'
alias rscrd='cargo doc --open'
alias rssd='xdg-open (rustup doc --path)'

zi_home="${HOME}/.zi"
if [ ! -e $zi_home ]; then sh -c "$(curl -fsSL https://git.io/get-zi)" --; fi;
source "${zi_home}/bin/zi.zsh"
autoload -Uz _zi
(( ${+_comps} )) && _comps[zi]=_zi

zi snippet for \
   snippet \
   OMZP::common-aliases \
   OMZP::extract \
   OMZP::git-auto-fetch \
   OMZP::shrink-path \
   OMZP::ssh-agent \
   OMZP::dirhistory \
   OMZP::colored-man-pages
zi load for \
   b4b4r07/enhancd \
   zpm-zsh/colorize \
   Flinner/zsh-emacs \
   birdhackor/zsh-exa-ls-plugin \
   arzzen/calc.plugin.zsh \
   wfxr/forgit \
   hlissner/zsh-autopair

# diff-so-fancy
zi ice wait"2" lucid as"program" pick"bin/git-dsf"
zi load z-shell/zsh-diff-so-fancy

zi light-mode for \
   annexes \
   z-shell/z-a-meta-plugins \
   @zsh-users+fast \
   @romkatv \
   @sharkdp \
   @ext-git

zi pack for dircolors-material

alias crontab="crontab -i"
alias cat=bat
alias q=exit

recon () {
    sudo guix system reconfigure "$HOME/.local/share/chezmoi/private_dot_config/guix/$1.scm" -L "$HOME/.local/share/chezmoi/private_dot_config/guix/"
}

