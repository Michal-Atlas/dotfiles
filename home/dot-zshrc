source /etc/zshrc

eval "$(starship init zsh)"
eval "$(zoxide init --cmd cd zsh)"
eval "$(direnv hook zsh)"

alias zy="sudo zypper"
alias ls="ls $LS_OPTIONS "
alias e="$EDITOR"
alias cat="bat"

function cheat() {
	curl "cheat.sh/$@"
}

for plugin in ~/.local/share/zsh-plugins/*/*.plugin.zsh; do
	source "$plugin"
done;
